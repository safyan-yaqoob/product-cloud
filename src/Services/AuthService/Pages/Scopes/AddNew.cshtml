@page
@model IdentityServer.Pages.Scopes.AddNewModel
@{
    Layout = "~/Pages/Shared/_LayoutWithSidebar.cshtml";
}

<div class="clients-page">
    @if (Model.Created)
    {
        <div class="row">
            <div class="col-md-6">
                <h2>Scope Name <em>@Model.InputModel.Name</em> created</h2>
            </div>
        </div>
    }
    else
    {
        <h2>
            Add New Scope
        </h2>


        <div class="row">
            <div class="col-md-6">                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="@Model.InputModel.Name" class="form-label"></label>
                        <input class="form-control" asp-for="@Model.InputModel.Name" autofocus />
                        <span asp-validation-for="@Model.InputModel.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="@Model.InputModel.DisplayName" class="form-label"></label>
                        <input class="form-control" asp-for="@Model.InputModel.DisplayName" />
                        <span asp-validation-for="@Model.InputModel.DisplayName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="@Model.InputModel.Resources" class="form-label"></label>
                        <input class="form-control" asp-for="@Model.InputModel.Resources" />
                        <span asp-validation-for="@Model.InputModel.Resources" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Save Changes</button>
                        <a class="btn btn-secondary" asp-page="/Admin/Scopes/Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}