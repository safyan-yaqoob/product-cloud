@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/Shared/_LayoutWithSidebar.cshtml";
}

<div class="py-8 bg-gray-50">
    <div class="mx-auto px-4 sm:px-6 lg:px-8">
        <div class="md:flex md:items-center md:justify-between">
            <div class="min-w-0 flex-1">
                <h1 class="text-3xl font-bold leading-7 text-gray-900 sm:truncate sm:text-4xl">Welcome to Auth Service</h1>
                <p class="mt-2 text-sm text-gray-500">Manage your authentication and authorization settings</p>
            </div>
        </div>
        <div class="mt-8 flex flex-col lg:flex-row gap-6">
            <!-- Users Card -->
            <div class="bg-white overflow-hidden shadow-lg rounded-xl flex-1 transition-all duration-200 hover:shadow-xl border border-gray-100">
                <div class="p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-blue-500 rounded-xl p-4 shadow-lg shadow-blue-200">
                            <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                            </svg>
                        </div>
                        <div class="ml-6 w-0 flex-1">
                            <dl>
                                <dt class="text-lg font-medium text-gray-900 truncate">Users</dt>
                                <dd class="flex items-baseline mt-2">
                                    <div class="text-3xl font-bold text-blue-600">@Model.UsersCount</div>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-6 py-4 border-t border-gray-100">
                    <a href="/Users" class="inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-800 transition-colors duration-200">
                        View all users
                        <svg class="ml-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Clients Card -->
            <div class="bg-white overflow-hidden shadow-lg rounded-xl flex-1 transition-all duration-200 hover:shadow-xl border border-gray-100">
                <div class="p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-green-500 rounded-xl p-4 shadow-lg shadow-green-200">
                            <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                        </div>
                        <div class="ml-6 w-0 flex-1">
                            <dl>
                                <dt class="text-lg font-medium text-gray-900 truncate">Clients</dt>
                                <dd class="flex items-baseline mt-2">
                                    <div class="text-3xl font-bold text-green-600">@Model.ClientsCount</div>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-6 py-4 border-t border-gray-100">
                    <a href="/Clients" class="inline-flex items-center text-sm font-semibold text-green-600 hover:text-green-800 transition-colors duration-200">
                        View all clients
                        <svg class="ml-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Scopes Card -->
            <div class="bg-white overflow-hidden shadow-lg rounded-xl flex-1 transition-all duration-200 hover:shadow-xl border border-gray-100">
                <div class="p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-purple-500 rounded-xl p-4 shadow-lg shadow-purple-200">
                            <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <div class="ml-6 w-0 flex-1">
                            <dl>
                                <dt class="text-lg font-medium text-gray-900 truncate">Scopes</dt>
                                <dd class="flex items-baseline mt-2">
                                    <div class="text-3xl font-bold text-purple-600">@Model.ScopesCount</div>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-6 py-4 border-t border-gray-100">
                    <a href="/Scopes" class="inline-flex items-center text-sm font-semibold text-purple-600 hover:text-purple-800 transition-colors duration-200">
                        View all scopes
                        <svg class="ml-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
