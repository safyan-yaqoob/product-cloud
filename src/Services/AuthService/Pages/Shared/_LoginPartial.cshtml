@using Microsoft.AspNetCore.Identity
@using IdentityServer.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="flex items-center space-x-4">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="relative" 
             x-data="{ open: false }"
             @@click.away="open = false"
             @@keydown.escape.stop="open = false"
             @@keydown.tab="open = false">
            <button type="button" 
                    @@click.stop="open = !open" 
                    class="flex items-center rounded-full bg-gray-200 text-gray-600 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                    id="user-menu-button" 
                    :aria-expanded="open"
                    aria-haspopup="true">
                <span class="sr-only">Open user menu</span>
                <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
                    </svg>
                </div>
            </button>

            <template x-if="open">
                <div class="absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
                     role="menu"
                     aria-orientation="vertical"
                     aria-labelledby="user-menu-button"
                     @@click.stop
                     x-transition:enter="transition ease-out duration-100"
                     x-transition:enter-start="transform opacity-0 scale-95"
                     x-transition:enter-end="transform opacity-100 scale-100"
                     x-transition:leave="transition ease-in duration-75"
                     x-transition:leave-start="transform opacity-100 scale-100"
                     x-transition:leave-end="transform opacity-0 scale-95">
                    <div class="px-4 py-2 text-sm text-gray-900 border-b border-gray-100">
                        <div class="font-medium">@User.Identity?.Name</div>
                        <div class="text-gray-500 truncate">Signed in</div>
                    </div>
                    <a asp-area="Identity" 
                       asp-page="/Account/Manage/Index" 
                       class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" 
                       role="menuitem" 
                       tabindex="-1">Profile settings</a>
                    <form asp-area="Identity" 
                          asp-page="/Account/Logout" 
                          asp-route-returnUrl="@Url.Page("/Index", new { area = "" })"
                          method="post">
                        <button type="submit" 
                                class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" 
                                role="menuitem" 
                                tabindex="-1">Sign out</button>
                    </form>
                </div>
            </template>
        </div>
    }
    else
    {
        <a class="text-sm font-medium text-gray-700 hover:text-gray-900" asp-area="Identity" asp-page="/Account/Register">
            Register
        </a>
        <a class="text-sm font-medium text-blue-600 hover:text-blue-800" asp-area="Identity" asp-page="/Account/Login">
            Login
        </a>
    }
</div>
