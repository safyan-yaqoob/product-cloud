@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
    <partial name="_StatusMessage" for="StatusMessage" />
    
    <div class="shadow sm:rounded-md sm:overflow-hidden">
        <div class="bg-white py-6 px-4 space-y-6 sm:p-6">
            <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900">@ViewData["Title"]</h3>
                <p class="mt-1 text-sm text-gray-500">Manage your email address and verification status.</p>
            </div>

            <form id="email-form" method="post">
                <div asp-validation-summary="All" class="rounded-md bg-red-50 p-4 mb-4" role="alert">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                            <div class="mt-2 text-sm text-red-700"></div>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-6 gap-6">
                    <div class="col-span-6 sm:col-span-4">
                        @if (Model.IsEmailConfirmed)
                        {
                            <div class="flex">
                                <div class="flex-grow">
                                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">Current Email</label>
                                    <div class="mt-1 relative rounded-md shadow-sm">
                                        <input asp-for="Email" class="mt-1 block w-full bg-gray-100 border border-gray-300 rounded-md shadow-sm py-2 px-3 sm:text-sm" disabled />
                                        <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                                            <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div>
                                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Current Email</label>
                                <div class="mt-1">
                                    <input asp-for="Email" class="mt-1 block w-full bg-gray-100 border border-gray-300 rounded-md shadow-sm py-2 px-3 sm:text-sm" disabled />
                                </div>
                                <div class="mt-2">
                                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" 
                                        class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                        Send verification email
                                    </button>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="col-span-6 sm:col-span-4">
                        <label asp-for="Input.NewEmail" class="block text-sm font-medium text-gray-700">New Email</label>
                        <div class="mt-1">
                            <input asp-for="Input.NewEmail" autocomplete="email" aria-required="true"
                                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                        </div>
                        <span asp-validation-for="Input.NewEmail" class="mt-2 text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="mt-6">
                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail"
                        class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Change email
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
