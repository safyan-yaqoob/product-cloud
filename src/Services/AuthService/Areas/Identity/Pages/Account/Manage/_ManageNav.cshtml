@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<nav class="space-y-1" aria-label="Account Settings">
    <a id="profile" asp-page="./Index" 
        class="@(ManageNavPages.IndexNavClass(ViewContext) == "active" 
            ? "bg-gray-100 text-gray-900 group rounded-md px-3 py-2 flex items-center text-sm font-medium" 
            : "text-gray-600 hover:bg-gray-50 hover:text-gray-900 group rounded-md px-3 py-2 flex items-center text-sm font-medium")">
        <svg class="@(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "text-gray-500" : "text-gray-400 group-hover:text-gray-500") flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
        </svg>
        Profile
    </a>

    <a id="change-password" asp-page="./ChangePassword" 
        class="@(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" 
            ? "bg-gray-100 text-gray-900 group rounded-md px-3 py-2 flex items-center text-sm font-medium"
            : "text-gray-600 hover:bg-gray-50 hover:text-gray-900 group rounded-md px-3 py-2 flex items-center text-sm font-medium")">
        <svg class="@(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "text-gray-500" : "text-gray-400 group-hover:text-gray-500") flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 00-5.25 5.25v3a3 3 0 00-3 3v6.75a3 3 0 003 3h10.5a3 3 0 003-3v-6.75a3 3 0 00-3-3v-3c0-2.9-2.35-5.25-5.25-5.25zm3.75 8.25v-3a3.75 3.75 0 10-7.5 0v3h7.5z" clip-rule="evenodd" />
        </svg>
        Password
    </a>

    @if (hasExternalLogins)
    {
        <a id="external-login" asp-page="./ExternalLogins" 
            class="@(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active"
                ? "bg-gray-100 text-gray-900 group rounded-md px-3 py-2 flex items-center text-sm font-medium"
                : "text-gray-600 hover:bg-gray-50 hover:text-gray-900 group rounded-md px-3 py-2 flex items-center text-sm font-medium")">
            <svg class="@(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "text-gray-500" : "text-gray-400 group-hover:text-gray-500") flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" d="M15.75 2.25H21a.75.75 0 01.75.75v5.25a.75.75 0 01-1.5 0V4.81L8.03 17.03a.75.75 0 01-1.06-1.06L19.19 3.75h-3.44a.75.75 0 010-1.5zm-10.5 4.5a1.5 1.5 0 00-1.5 1.5v10.5a1.5 1.5 0 001.5 1.5h10.5a1.5 1.5 0 001.5-1.5V10.5a.75.75 0 011.5 0v8.25a3 3 0 01-3 3H5.25a3 3 0 01-3-3V8.25a3 3 0 013-3h8.25a.75.75 0 010 1.5H5.25z" clip-rule="evenodd" />
            </svg>
            External logins
        </a>
    }

    <a id="two-factor" asp-page="./TwoFactorAuthentication"
        class="@(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active"
            ? "bg-gray-100 text-gray-900 group rounded-md px-3 py-2 flex items-center text-sm font-medium"
            : "text-gray-600 hover:bg-gray-50 hover:text-gray-900 group rounded-md px-3 py-2 flex items-center text-sm font-medium")">
        <svg class="@(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "text-gray-500" : "text-gray-400 group-hover:text-gray-500") flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 00-5.25 5.25v3a3 3 0 00-3 3v6.75a3 3 0 003 3h10.5a3 3 0 003-3v-6.75a3 3 0 00-3-3v-3c0-2.9-2.35-5.25-5.25-5.25zm3.75 8.25v-3a3.75 3.75 0 10-7.5 0v3h7.5z" clip-rule="evenodd" />
        </svg>
        Two-factor authentication
    </a>

    <a id="personal-data" asp-page="./PersonalData"
        class="@(ManageNavPages.PersonalDataNavClass(ViewContext) == "active"
            ? "bg-gray-100 text-gray-900 group rounded-md px-3 py-2 flex items-center text-sm font-medium"
            : "text-gray-600 hover:bg-gray-50 hover:text-gray-900 group rounded-md px-3 py-2 flex items-center text-sm font-medium")">
        <svg class="@(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "text-gray-500" : "text-gray-400 group-hover:text-gray-500") flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" d="M5.25 9a6.75 6.75 0 0113.5 0v.75c0 2.123.8 4.057 2.118 5.52a.75.75 0 01-.297 1.206c-1.544.57-3.16.99-4.831 1.243a3.75 3.75 0 11-7.48 0 24.585 24.585 0 01-4.831-1.244.75.75 0 01-.298-1.205A8.217 8.217 0 005.25 9.75V9zm4.502 8.9a2.25 2.25 0 104.496 0 25.057 25.057 0 01-4.496 0z" clip-rule="evenodd" />
        </svg>
        Personal data
    </a>
</nav>
